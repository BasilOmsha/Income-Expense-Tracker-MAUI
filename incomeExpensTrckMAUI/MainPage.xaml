<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="incomeExpensTrckMAUI.MainPage"
             xmlns:viewModels="clr-namespace:incomeExpensTrckMAUI.ViewModels"
             x:DataType="viewModels:MainPageViewModel">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!-- Title Label -->
            <Label Text="{Binding Title}" Grid.Row="0" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Start" Margin="10,10,0,0" />
            <!-- Expense Page Button -->
            <Button Text="Expense Page" Grid.Row="1" Grid.Column="1" Margin="10" VerticalOptions="Center" />
            <!-- Income Page Button -->
            <Button Text="Income Page" Grid.Row="1" Grid.Column="2" Margin="10" VerticalOptions="Center" />
            <Label Text="" Grid.Row="1" Grid.Column="3" Margin="10" VerticalOptions="Center" />
        </Grid>
    </ContentPage.Content>
</ContentPage>