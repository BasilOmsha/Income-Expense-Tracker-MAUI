<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="incomeExpensTrckMAUI.MainPage"
             xmlns:viewModels="clr-namespace:incomeExpensTrckMAUI.ViewModels"
             x:DataType="viewModels:MainPageViewModel">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="{Binding Title}" />
            <!-- Binding to Title property from BaseViewModel -->
            <Button Text="Expense Page"  />
            <Button Text="Income Page" />
            <!-- Add more buttons for other pages if needed -->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
