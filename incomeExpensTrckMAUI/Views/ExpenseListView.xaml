<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:incomeExpensTrckMAUI.Models"
             xmlns:viewmodel="clr-namespace:incomeExpensTrckMAUI.ViewModels"
             x:Class="incomeExpensTrckMAUI.Views.ExpenseListView"
             x:DataType="viewmodel:ExpenseListViewModel">
    <CollectionView ItemsSource="{Binding Expenses}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:Expense">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="{Binding Category[0].Name}" />
                    <Label Text="{Binding Account[0].Name}" />
                    <Label Text="{Binding Amount, StringFormat='Amount: {0:C}'}" />
                </HorizontalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentView>