<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Name="this"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="incomeExpensTrckMAUI.Views.IncomeView"
             xmlns:model="clr-namespace:incomeExpensTrckMAUI.Models"
             xmlns:viewmodel="clr-namespace:incomeExpensTrckMAUI.ViewModels"
             x:DataType="viewmodel:IncomeViewModel">
    <StackLayout VerticalOptions="FillAndExpand">
        <!-- Income CollectionView -->
        <CollectionView ItemsSource="{Binding Incomes}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Income">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="{Binding Category[0].Name}" />
                        <Label Text="{Binding Account[0].Name}" />
                        <Label Text="{Binding Amount, StringFormat='Amount: {0:C}'}" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentView>
